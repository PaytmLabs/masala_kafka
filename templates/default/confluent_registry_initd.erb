USER=<%= node["kafka"]["user"] %>
SLEEP_TIME=5
CURRENT_WAIT=0
TIMEOUT=<%= node["kafka"]["shutdown_timeout"] %>
MAIN_CLASS=io.confluent.kafka.schemaregistry.rest.Main

# Setup environment variables
SETUP_ENV=""
<% node["confluent"]["registry"]["env"].each do |k, v| -%>
SETUP_ENV="$SETUP_ENV <%= k %>=\"<%= v %>\" "
<% end -%>

# We have to pipe STDOUT here otherwise it will print logs when running script
START_SERVER_CMD="$SETUP_ENV nohup <%= node['confluent']['install_dir'] %>/bin/schema-registry-start <%= node['confluent']['install_dir'] %>/etc/schema-registry/schema-registry.properties  >> <%= node['confluent']['registry']['stdout'] %>  2>> <%= node['confluent']['registry']['stderr'] %> &"

# We have to pipe STDOUT here otherwise it will print logs when running script
STOP_SERVER_CMD="<%= node['confluent']['install_dir'] %>/bin/schema-registry-stop >> <%= node['confluent']['registry']['stdout'] %>  2>> <%= node['confluent']['registry']['stderr'] %>"

start() {
  findPid
  
  if [ "" = "$FOUND_PID" ]; then
    su -l $USER -c "$START_SERVER_CMD"
      
    if [ $? -ne 0 ]; then
      echo "Error starting Confluent Schema Registry"
      exit 1
    fi
      
    echo "Confluent Schema Registry successfully started"
      
  else
    echo "Confluent Schema Registry is already running"
  fi
}

stop() {
  findPid
  if [ -z "$FOUND_PID" ]; then
    echo "Confluent Schema Registry is not running, nothing to stop"
  else
    
    while [ -n "$FOUND_PID" ]; 
    do
      echo "Attempting to shutdown Confluent Schema Registry..."
      su -l $USER -c "$STOP_SERVER_CMD"
      
      if [ $? -ne 0 ]; then
        echo "Error stopping Confluent Schema Registry"
        exit 1
      fi
      
      sleep $SLEEP_TIME
      CURRENT_WAIT=$CURRENT_WAIT+$SLEEP_TIME
      if [ $CURRENT_WAIT -gt $TIMEOUT ]; then
        echo "Timed out waiting for Confluent Schema Registry to stop"
        exit 1
      fi
      findPid
    done
      
    echo "Stopped Confluent Schema Registry"
      
  fi
}

status() {
  findPid
  if [ -z "$FOUND_PID" ]; then
    echo "Confluent Schema Registry is not running" ; exit 1
  else
    echo "Confluent Schema Registry is running : $FOUND_PID" 
  fi
}

findPid() {
  FOUND_PID=$(pgrep -u $USER -f $MAIN_CLASS)
}

case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  restart)
    stop
    start
  ;;
  status)
    status
  ;;
  *)
    echo "Usage: $0 {start|stop|restart|status}"
    exit 1
esac

exit 0
